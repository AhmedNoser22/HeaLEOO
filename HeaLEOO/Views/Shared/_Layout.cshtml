<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Healio - @ViewData["Title"]</title>

    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Animations -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/auth.css" />
	<link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/index.css" />
</head>
<body>
    <!-- ======= Header ======= -->
<div class="header">
    <div class="brand">
        <a asp-controller="Home" asp-action="Index" class="brand-link">
            <img class="logo" src="~/images/healeologolog.png" alt="Healeo Logo" />
            <span class="brand-title">Healeo</span>
        </a>
    </div>

    <div class="nav-links">
        <a asp-controller="Home" asp-action="Index">Home</a>
        <a asp-controller="Home" asp-action="About">About</a>
        <a asp-controller="Home" asp-action="Clinic">Clinics</a>
    </div>

    <div class="nav-buttons">
        <a asp-controller="Auth" asp-action="Login" class="btn home-btn-login">Login</a>
        <a asp-controller="Auth" asp-action="Register" class="btn home-btn-register">Register</a>
        <a asp-controller="Doctors" asp-action="Index" class="btn home-btn-doctors">Doctors</a>
    </div>
</div>



    <!-- ======= Main Content ======= -->
    <main>
        @RenderBody()
    </main>

    <!-- ======= Footer ======= -->
    <footer class="footer">
        <div class="footer-content">

            <!-- Links -->
            <div class="footer-links">
                <div class="footer-column">
                    <h6>Product</h6>
                    <a href="#"><i class="bi bi-box"></i> Product</a>
                    <a href="#"><i class="bi bi-gear"></i> Features</a>
                    <a href="#"><i class="bi bi-code-slash"></i> API</a>
                </div>

                <div class="footer-column">
                    <h6>Support</h6>
                    <a href="#"><i class="bi bi-headset"></i> Support</a>
                    <a href="#" class="contact-us-btn"><i class="bi bi-envelope-fill"></i> Contact Us</a>
                    <a href="#"><i class="bi bi-info-circle"></i> Status</a>
                </div>

                <div class="footer-column">
                    <h6>Legal</h6>
                    <a href="#"><i class="bi bi-file-earmark-text"></i> Terms of Service</a>
                    <a href="#"><i class="bi bi-shield-check"></i> HIPAA Compliance</a>
                </div>
            </div>

            <!-- Brand Info -->
            <div class="footer-brand">
                <h3 class="footer-logo">Healeo</h3>
                <p class="footer-tagline">Your trusted healthcare appointment platform</p>
                <p class="footer-contact">
                    Contact us: <a href="mailto:info@healio.com">info@healio.com</a>
                </p>
                <p class="footer-copyright">
                    &copy; 2025 Healio. All rights reserved.
                </p>
            </div>

        </div>
    </footer>

    <!-- ======= Scripts ======= -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
