@inject UserManager<AppUser> userManager
@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Healeo | @ViewData["Title"]</title>

    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap">

    <!-- Animations -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

    <!-- Shared Styles -->
    <link rel="stylesheet" href="~/css/shared/global.css" />
    <link rel="stylesheet" href="~/css/shared/header.css" />
    <link rel="stylesheet" href="~/css/shared/footer.css" />

    <!-- Pages Styles -->
    <link rel="stylesheet" href="~/css/pages/auth.css" />
    <link rel="stylesheet" href="~/css/pages/index.css" />
    <link rel="stylesheet" href="~/css/pages/about.css" />
    <link rel="stylesheet" href="~/css/pages/dashboard.css" />

    <link rel="stylesheet" href="~/css/pages/clinics.css" />
    <link rel="stylesheet" href="~/css/pages/doctors.css" />

    <link rel="stylesheet" href="~/css/views/specializations/add.css" />
    <link rel="stylesheet" href="~/css/views/specializations/index.css" />
</head>
<body>
    <!-- ======= Header ======= -->
    <div class="header">
        <div class="brand">
            <a asp-controller="Home" asp-action="Index" class="brand-link">
                <img class="logo" src="~/images/healeologolog.png" alt="Healeo Logo" />
            </a>
        </div>

        <div class="nav-links">
            <a class="animated-underline" asp-controller="Clinics" asp-action="Index">Clinics</a>
            <a class="animated-underline" asp-controller="Doctors" asp-action="Index">Doctors</a>
            <a class="animated-underline" asp-controller="Services" asp-action="Index">Services</a>
            <a class="animated-underline" asp-controller="UserManagement" asp-action="Index">User Management</a>
            

             @if (User.IsInRole("Admin"))
            {
                <a class="animated-underline" asp-controller="RoleMvc" asp-action="Index">Roles</a>
                <a class="animated-underline" asp-controller="UserManagement" asp-action="Index">User Management</a>
                <a class="animated-underline" asp-controller="RoleMvc" asp-action="Index">Roles</a>
            } 
        </div>
        <div class="nav-buttons">
            @if (User.Identity.IsAuthenticated)
            {
				var userLd = await userManager.GetUserAsync(User);
                @* <span class="btn home-bun-username">@userManager.Users</span> *@
                <form method="post" asp-controller="Auth" asp-action="Logout" class="mb-0">
                    <button type="submit" class="btn home-btn-logout">Logout</button>
                </form>
            }
            else
            {
                <a asp-controller="Auth" asp-action="Login" class="btn home-btn-login animated-underline">Log in</a>
                <a asp-controller="Auth" asp-action="Register" class="btn home-btn-register">Get started</a>
            }
        </div>
    </div>

    <!-- ======= Main Content ======= -->
    <main>
        @RenderBody()
        <!-- this is test for now-->
    </main>

    <!-- ======= Footer ======= -->
    <footer class="footer">
        <div class="footer-content">

            <!-- Links -->
            <div class="footer-links">
                <div class="footer-column">
                    <h6>Discover</h6>
                    <a href="#"><i class="bi bi-hospital"></i>Clinics</a>
                    <a href="#"><i class="bi bi-person"></i>Doctors</a>
                    <a href="#"><i class="bi bi-star"></i>Reviews</a>
                </div>

                <div class="footer-column">
                    <h6>Support</h6>
                    <a href="#"><i class="bi bi-headset"></i>Support</a>
                    <a href="#"><i class="bi bi-shield-lock"></i>Privacy</a>
                    <a href="#"><i class="bi bi-info-circle"></i>Status</a>
                </div>

                <div class="footer-column">
                    <h6>Social</h6>
                    <a href="#"><i class="bi bi-facebook"></i>Facebook</a>
                    <a href="#"><i class="bi bi-instagram"></i>Instagram</a>
                    <a href="#"><i class="bi bi-whatsapp"></i>WhatsApp</a>
                </div>

                <div class="footer-column">
                    <h6>Legal</h6>
                    <a href="#"><i class="bi bi-lock"></i> Privacy Policy</a>
                    <a href="#"><i class="bi bi-123"></i> Terms of Service</a>
                    <a href="#"><i class="bi bi-bookmark-check"></i> Doctor's Rights</a>
                </div>
            </div>

            <!-- Brand Info -->
            <div class="footer-brand">
                <div class="brand">
                    <div class="brand-link">
                        <span class="brand-title-footer">Healeo</span>
                    </div>
                </div>
                <p class="footer-tagline">Your trusted healthcare clinics.</p>
                <p class="footer-contact">
                    Contact us: <a href="mailto:info@healeo.com">info@healeo.com</a>
                </p>
                <p class="footer-copyright">
                    &copy; 2025 Healeo. All rights reserved.
                </p>
            </div>

            <!-- Back to Top Button -->
            <button id="backToTop" class="back-to-top" title="Back to top">
                ↑
            </button>
        </div>
    </footer>

    <!-- ======= Scripts ======= -->
    <script>
        const backToTop = document.getElementById("backToTop");
        window.addEventListener("scroll", () => {
            if (window.scrollY > 200) {
                backToTop.classList.add("show");
            } else {
                backToTop.classList.remove("show");
            }
        });
        backToTop.addEventListener("click", () => {
            window.scrollTo({ top: 0, behavior: "smooth" });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
