<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Healeo | @ViewData["Title"]</title>

    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap">

    <!-- Animations -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

    @* <link href="~/css/pages/site.css" rel="stylesheet" /> *@

    <!-- Shared Styles -->
    <link href="~/css/shared/global.css" rel="stylesheet" />
    <link href="~/css/shared/header.css" rel="stylesheet" />
    <link href="~/css/shared/footer.css" rel="stylesheet" />

    <!-- Pages Styles -->
    <link href="~/css/pages/auth.css" rel="stylesheet" />
    <link href="~/css/pages/index.css" rel="stylesheet" />
    <link href="~/css/pages/dashboard.css" rel="stylesheet" />
</head>
<body>
    <!-- ======= Header ======= -->
<div class="header">
    <div class="brand">
        <a asp-controller="Home" asp-action="Index" class="brand-link">
            <img class="logo" src="~/images/healeologolog.png" alt="Healeo Logo" />
            <span class="brand-title">Healeo</span>
        </a>
    </div>

    <div class="nav-links">
        <a asp-controller="Clinics" asp-action="index">Clinics</a>
    </div>

    <div class="nav-buttons">
        <a asp-controller="Auth" asp-action="Login" class="btn home-btn-login">Login</a>
        <a asp-controller="Auth" asp-action="Register" class="btn home-btn-register">Register</a>
        <a asp-controller="Doctors" asp-action="Index" class="btn home-btn-doctors">Doctors</a>
    </div>
</div>



    <!-- ======= Main Content ======= -->
    <main>
        @RenderBody()
    </main>

    <!-- ======= Footer ======= -->
    <footer class="footer">
        <div class="footer-content">

            <!-- Links -->
            <div class="footer-links">
                <div class="footer-column">
                    <h6>Discover</h6>
                    <a href="#"><i class="bi bi-hospital"></i>Clinics</a>
                    <a href="#"><i class="bi bi-person"></i>Doctors</a>
                    <a href="#"><i class="bi bi-star"></i>Reviews</a>
                </div>

                <div class="footer-column">
                    <h6>Support</h6>
                    <a href="#"><i class="bi bi-headset"></i>Support</a>
                    <a href="#"><i class="bi bi-shield-lock"></i>Privacy</a>
                    <a href="#"><i class="bi bi-info-circle"></i>Status</a>
                </div>

                <div class="footer-column">
                    <h6>Social</h6>
                    <a href="#"><i class="bi bi-facebook"></i>Facebook</a>
                    <a href="#"><i class="bi bi-instagram"></i>Instagram</a>
                    <a href="#"><i class="bi bi-whatsapp"></i>WhatsApp</a>
                </div>

                <div class="footer-column">
                    <h6>Legal</h6>
                    <a href="#"><i class="bi bi-lock"></i> Privacy Policy</a>
                    <a href="#"><i class="bi bi-123"></i> Terms of Service</a>
                    <a href="#"><i class="bi bi-bookmark-check"></i> Doctor's Rights</a>
                </div>
            </div>

            <!-- Brand Info -->
            <div class="footer-brand">
                <div class="brand">
                    <!-- Not clickable anymore -->
                    <div class="brand-link">
                        @* <img class="logo" src="~/images/healeologolog.png" alt="Healeo Logo" /> *@
                        <span class="brand-title">Healeo</span>
                    </div>
                </div>
                <p class="footer-tagline">Your trusted healthcare clinics.</p>
                <p class="footer-contact">
                    Contact us: <a href="mailto:info@healeo.com">info@healeo.com</a>
                </p>
                <p class="footer-copyright">
                    &copy; 2025 Healeo. All rights reserved.
                </p>
            </div>

            <!-- Back to Top Button -->
            <button id="backToTop" class="back-to-top" title="Back to top">
                ↑
            </button>

        </div>
    </footer>

    <!-- ======= Scripts ======= -->
    
    <!-- Smooth Scroll Script -->
    <script>
        const backToTop = document.getElementById("backToTop");
        window.addEventListener("scroll", () => {
            if (window.scrollY > 200) {
                backToTop.classList.add("show");
            } else {
                backToTop.classList.remove("show");
            }
        });
        backToTop.addEventListener("click", () => {
            window.scrollTo({ top: 0, behavior: "smooth" });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
