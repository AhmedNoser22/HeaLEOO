@model IEnumerable<DoctorViewModel>

<div class="doctors-container">
    <h2 class="doctors-title">Doctors</h2>

    <div class="doctors-grid">
        @foreach (var doc in Model)
        {
            <div class="doctor-card">
                <div class="doctor-info">
                    <h3 class="doctor-name">@doc.Name</h3>
                    <p class="doctor-phone">@doc.PhoneNumber</p>
                    <p class="doctor-specialization">@doc.SpecializationName</p>

                    <div class="doctor-clinics">
                        @foreach (var clinic in doc.ClinicNames)
                        {
                            <span class="doctor-clinic-badge">@clinic</span>
                        }
                    </div>
                </div>

                <div class="doctor-actions">
                    <a asp-action="DeleteDoctor" asp-route-id="@doc.Id"
                       class="doctor-btn-delete"
                       onclick="return confirm('Are you sure you want to delete this doctor?');">
                        Delete
                    </a>
                </div>
            </div>
        }
    </div>

    <div class="doctors-footer">
        <a asp-action="Create" class="doctor-btn-create">+ Add New Doctor</a>
    </div>
</div>
    