@model IEnumerable<DoctorViewModel>

@{
    ViewData["Title"] = "Doctors List";
}

<h2>Doctors List</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Add New Doctor</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().PhoneNumber)</th>
            <th>@Html.DisplayNameFor(model => model.First().SpecializationId)</th>
            <th>Clinics</th>
            <th>Appointments</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.Name</td>
                <td>@doctor.PhoneNumber</td>
                <td>
                    @doctor.Specializations
                    .FirstOrDefault(s => s.Value == doctor.SpecializationId.ToString())?.Text
                </td>
                <td>
                    @string.Join(", ",
                    doctor.ClinicIds.Select(id => doctor.Clinics.FirstOrDefault(c => c.Value == id.ToString())?.Text))
            </td>
            <td>
                @string.Join(", ",
                                doctor.AppointmentsIds.Select(id => doctor.Appointments.FirstOrDefault(a => a.Value == id.ToString())?.Text))
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@doctor.Id" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Delete" asp-route-id="@doctor.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
                }
    </tbody>
</table>
