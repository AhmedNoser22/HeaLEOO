@model HeaLEOO.ViewModels.DoctorViewModel

<div class="doctor-create-container">
    <div class="doctor-create-card">
        <h2 class="doctor-create-title">Add New Doctor</h2>

        <form asp-action="Create" method="post" class="doctor-create-form">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter doctor's name" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <label asp-for="SpecializationId">Specialization</label>
                <select asp-for="SpecializationId" asp-items="Model.Specializations" class="form-select"></select>
                <span asp-validation-for="SpecializationId" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <label>Clinics</label>
                <select asp-for="ClinicIds" asp-items="Model.Clinics" class="form-select" multiple></select>
                <span asp-validation-for="ClinicIds" class="text-danger small"></span>
            </div>

            <div class="doctor-create-actions">
                <button type="submit" class="btn-create">Save</button>
                <a asp-action="Index" class="btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>
