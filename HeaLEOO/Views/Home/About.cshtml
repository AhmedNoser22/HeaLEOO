@{
    ViewData["Title"] = "About";
}

<link rel="stylesheet" href="~/css/about.css">

<main>
    <!-- Hero Section -->
    <section class="about-hero d-flex align-items-center text-center text-white">
        <div class="container">
            <h1 class="fw-bold display-4 animate__animated animate__fadeInDown">
                About Healeo
            </h1>
            <p class="lead mt-3 animate__animated animate__fadeInUp">
                Connecting patients with trusted clinics and healthcare providers efficiently.
            </p>
            <a href="#" class="btn btn-light btn-lg px-5 mt-3 shadow">Discover More</a>
        </div>
    </section>

    <!-- Our Story Section -->
    <section class="our-story py-5">
        <div class="story-card">
            <h2 class="fw-bold mb-4">Our Story</h2>
            <p>
                Healeo was founded to simplify the healthcare experience. From booking appointments to tracking visits, we aim to make managing health seamless and stress-free. Our team of dedicated developers and healthcare professionals work together to bring technology and healthcare closer to you.
            </p>
        </div>
    </section>


    <!-- Mission & Goals Section -->
    <section class="mission-goals py-5 bg-light text-center">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="mission-card">
                        <h3 class="fw-bold mb-3">Our Mission</h3>
                        <p>To make healthcare accessible, simple, and reliable for everyone by connecting patients with trusted clinics and professionals.</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="goals-card">
                        <h3 class="fw-bold mb-3">Our Goals</h3>
                        <p>Deliver a seamless booking experience, ensure data security, and maintain a network of verified clinics and healthcare providers.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Team / Doctors Section -->
    <section class="featured-doctors py-5">
        <div class="container text-center">
            <h2 class="fw-bold mb-5">Meet Our Doctors</h2>
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="doctor-card">
                        <img src="~/images/Central_Medical_Center.jpeg" alt="Dr. Ahmed Ali" class="doctor-image">
                        <h5>Dr. Ahmed Ali</h5>
                        <p class="rating">4.8 / 5</p>
                        <p>Cardiology Specialist</p>
                        <a href="#" class="btn btn-primary btn-profile">View Profile</a>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="doctor-card">
                        <img src="~/images/Wellness_Family_Clinic.jpeg" alt="Dr. Sarah Mohamed" class="doctor-image">
                        <h5>Dr. Sarah Mohamed</h5>
                        <p class="rating">4.6 / 5</p>
                        <p>General Practitioner</p>
                        <a href="#" class="btn btn-primary btn-profile">View Profile</a>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="doctor-card">
                        <img src="~/images/Advanced_Care_Hospital.jpeg" alt="Dr. Youssef Nabil" class="doctor-image">
                        <h5>Dr. Youssef Nabil</h5>
                        <p class="rating">4.9 / 5</p>
                        <p>Pediatric Specialist</p>
                        <a href="#" class="btn btn-primary btn-profile">View Profile</a>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="doctor-card">
                        <img src="~/images/Community_Health_Center.jpeg" alt="Dr. Laila Hassan" class="doctor-image">
                        <h5>Dr. Laila Hassan</h5>
                        <p class="rating">4.5 / 5</p>
                        <p>Dermatology Specialist</p>
                        <a href="#" class="btn btn-primary btn-profile">View Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Our Values Section -->
    <section class="our-values py-5 text-center">
        <div class="container">
            <h2 class="fw-bold mb-5">Our Values</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="value-card">
                        <i class="bi bi-heart-pulse display-4 text-primary"></i>
                        <h4>Patient First</h4>
                        <p>Prioritizing the patient's experience and wellbeing in every step of our platform.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="value-card">
                        <i class="bi bi-shield-check display-4 text-success"></i>
                        <h4>Trusted Network</h4>
                        <p>We carefully verify clinics and doctors to provide reliable and safe healthcare.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="value-card">
                        <i class="bi bi-lock display-4 text-danger"></i>
                        <h4>Security & Privacy</h4>
                        <p>Your health information is handled securely with privacy and compliance.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>


</main>
