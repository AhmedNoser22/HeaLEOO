@{
    ViewData["Title"] = "Home";
}

<main>
    <section class="hero d-flex align-items-center text-center text-white">
        <div class="container">
            <h1 class="fw-bold display-4 animate__animated animate__fadeInDown">
                Book Your Healthcare Appointments Easily
            </h1>
            <p class="lead mt-3 animate__animated animate__fadeInUp">
                Manage your clinic visits and connect with healthcare providers instantly.
            </p>
            <a href="#" class="btn btn-light btn-lg px-5 mt-3 shadow">Book Now</a>
        </div>
    </section>

    <section class="how-it-works">
        <div class="container">
            <h2 class="fw-bold mb-4">How It Works</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="step-card">
                        <i class="bi bi-hospital display-4 text-primary"></i>
                        <h5 class="mt-3">Choose Clinic</h5>
                        <p class="step-description">Choose from our network of trusted doctors in your area.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="step-card">
                        <i class="bi bi-calendar2-check display-4 text-success"></i>
                        <h5 class="mt-3">Select Date & Time</h5>
                        <p class="step-description">Select a date and time slot that fits your schedule.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="step-card">
                        <i class="bi bi-check-circle display-4 text-danger"></i>
                        <h5 class="mt-3">Confirm Visit</h5>
                        <p class="step-description">Confirm and receive reminders for your upcoming appointment.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="featured-clinics">
        <div class="container">
            <h2 class="fw-bold mb-4">Featured Clinics</h2>
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="clinic-card">
                        <img src="~/images/Central_Medical_Center.jpeg" alt="Central Medical Center" class="clinic-image">
                        <h5>North Mansoura Clinic</h5>
                        <p class="stars">★★★★☆</p>
                        <p class="reviews">(12 reviews)</p>
                        <p>12 slots available</p>
                        <a href="#" class="btn btn-primary btn-slot">View Slots</a>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="clinic-card">
                        <img src="~/images/Wellness_Family_Clinic.jpeg" alt="Wellness Family Clinic" class="clinic-image">
                        <h5>Sidi Gaber Clinic</h5>
                        <p class="stars">★★★★☆</p>
                        <p class="reviews">(8 reviews)</p>
                        <p>8 slots available</p>
                        <a href="#" class="btn btn-primary btn-slot">View Slots</a>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="clinic-card">
                        <img src="~/images/Advanced_Care_Hospital.jpeg" alt="Advanced Care Hospital" class="clinic-image">
                        <h5>6 October Clinic</h5>
                        <p class="stars">★★★★☆</p>
                        <p class="reviews">(10 reviews)</p>
                        <p>10 slots available</p>
                        <a href="#" class="btn btn-primary btn-slot">View Slots</a>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="clinic-card">
                        <img src="~/images/Community_Health_Center.jpeg" alt="Community Health Center" class="clinic-image">
                        <h5>Future City Clinic</h5>
                        <p class="stars">★★★☆☆</p>
                        <p class="reviews">(6 reviews)</p>
                        <p>6 slots available</p>
                        <a href="#" class="btn btn-primary btn-slot">View Slots</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="features py-5 text-center">
        <div class="container">
            <h2 class="fw-bold mb-4">Why Choose Healeo?</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="step-card">
                        <i class="bi bi-calendar2-check display-4 text-primary"></i>
                        <h5 class="mt-3">Easy Booking</h5>
                        <p class="step-description">Schedule appointments with just a few clicks.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="step-card">
                        <i class="bi bi-hospital display-4 text-success"></i>
                        <h5 class="mt-3">Multiple Clinics</h5>
                        <p class="step-description">Access a wide network of high trusted clinics.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="step-card">
                        <i class="bi bi-shield-lock display-4 text-danger"></i>
                        <h5 class="mt-3">Secure Data</h5>
                        <p class="step-description">Your health information is protected with enterprise-grade security.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="testimonials py-5">
        <div class="container text-center">
            <h2 class="fw-bold mb-4">What Our Patients Say</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="testimonial-card">
                        <img src="https://randomuser.me/api/portraits/women/44.jpg" alt="Dr. Sarah Johnson" class="testimonial-avatar">
                        <p class="testimonial-text">"Healeo has transformed how we manage appointments. The interface is clean and intuitive."</p>
                        <small class="testimonial-author">- Dr. Sarah Johnson</small>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="testimonial-card">
                        <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="Michael Chen" class="testimonial-avatar">
                        <p class="testimonial-text">"Booking my appointments has never been easier. Highly recommended!"</p>
                        <small class="testimonial-author">- Michael Chen</small>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="testimonial-card">
                        <img src="https://randomuser.me/api/portraits/women/65.jpg" alt="Dr. Emily Rodriguez" class="testimonial-avatar">
                        <p class="testimonial-text">"Secure and reliable, Healeo keeps my data safe while being simple to use."</p>
                        <small class="testimonial-author">- Dr. Emily Rodriguez</small>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
