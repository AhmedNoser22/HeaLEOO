@inject UserManager<AppUser> userManager
@model IEnumerable<ClinicVM>
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Home";
}

<main>
    <section class="hero d-flex align-items-center text-center text-white">
        <div class="container">
            <h1 class="fw-bold display-4 animate__animated animate__fadeInDown">
                Book Your Healthcare Appointments Easily
            </h1>
            <p class="lead mt-3 animate__animated animate__fadeInUp">
                Manage your clinic visits and connect with healthcare providers instantly.
            </p>
            @* <a href="#" class="btn btn-light btn-lg px-5 mt-3 shadow">Get started</a> *@
                @if (!(User.Identity.IsAuthenticated))
                {
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-light btn-lg px-5 mt-3 shadow">Get started</a>

                }
        </div>
    </section>
    <div class="page">
    <section class="how-it-works">
        <div class="container">
            <h2 class="fw-bold mb-4">How It Works</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="step-card">
                        <i class="bi bi-hospital display-4 text-primary"></i>
                        <h5 class="mt-3">Choose Clinic</h5>
                        <p class="step-description">Choose from our network of trusted doctors in your area.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="step-card">
                        <i class="bi bi-calendar2-check display-4 text-success"></i>
                        <h5 class="mt-3">Select Date & Time</h5>
                        <p class="step-description">Select a date and time slot that fits your schedule.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="step-card">
                        <i class="bi bi-check-circle display-4 text-danger"></i>
                        <h5 class="mt-3">Confirm Visit</h5>
                        <p class="step-description">Confirm and receive reminders for your upcoming appointment.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="featured-clinics">
        <div class="container">
            <h2 class="fw-bold mb-4">Featured Clinics</h2>
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="clinic-card">
                        <img src="~/images/HealClinic.jpg" alt="Central Medical Center" class="clinic-image">
                        <h5>Heal Clinic</h5>
                        <p class="stars">★★★★☆</p>
                        <p class="reviews">(12 reviews)</p>
                        <p>12 slots available</p>
                        <a asp-controller="Clinics" asp-action="Index" class="btn btn-primary btn-slot">View All Clinics</a>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="clinic-card">
                        <img src="~/images/WellnessClinic.jpg" alt="Wellness Family Clinic" class="clinic-image">
                        <h5>Wellness Clinic</h5>
                        <p class="stars">★★★★★</p>
                        <p class="reviews">(8 reviews)</p>
                        <p>8 slots available</p>
                        <a asp-controller="Clinics" asp-action="Index" class="btn btn-primary btn-slot">View All Clinics</a>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="clinic-card">
                        <img src="~/images/SmileDental.jpg" alt="Advanced Care Hospital" class="clinic-image">
                        <h5>Smile Dental</h5>
                        <p class="stars">★★★★☆</p>
                        <p class="reviews">(10 reviews)</p>
                        <p>10 slots available</p>
                        <a asp-controller="Clinics" asp-action="Index" class="btn btn-primary btn-slot">View All Clinics</a>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="clinic-card">
                        <img src="~/images/SurgeryHub.jpg" alt="Community Health Center" class="clinic-image">
                        <h5>Surgery Hub</h5>
                        <p class="stars">★★★☆☆</p>
                        <p class="reviews">(6 reviews)</p>
                        <p>6 slots available</p>
                        <a asp-controller="Clinics" asp-action="Index" class="btn btn-primary btn-slot">View All Clinics</a>
                    </div>
                </div>
            </div>
        </div>
    </section> 

