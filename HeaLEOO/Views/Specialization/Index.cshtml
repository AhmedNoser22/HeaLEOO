@model IEnumerable<HeaLEOO.ViewModels.SpecializationsVM>

@{
    ViewData["Title"] = "Specializations";
}

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold title-specializations">
            <i class="bi bi-layers-fill"></i> Specializations
        </h2>
        <a asp-action="AddSpecializations" class="btn btn-gradient btn-lg shadow-sm px-4">
            <i class="bi bi-plus-circle"></i> Add Specialization
        </a>
    </div>


    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="card-body p-4">
            <table class="table table-hover align-middle text-center">
                <thead class="table-header">
                    <tr>
                        <th class="fw-semibold">Specialization Name</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var spec in Model)
                        {
                            <tr class="table-row-hover">
                                <td class="fw-semibold text-dark">@spec.Name</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="1" class="text-muted">No specializations found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>