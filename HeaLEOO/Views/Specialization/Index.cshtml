@model IEnumerable<HeaLEOO.ViewModels.SpecializationsVM>

@{
    ViewData["Title"] = "Specializations";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-layers-fill"></i> Specializations
        </h2>
        <a asp-action="AddSpecializations" class="btn btn-gradient btn-lg">
            <i class="bi bi-plus-circle"></i> Add Specialization
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body">
            <table class="table table-hover align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th style="width:70%">Specialization Name</th>
                        <th style="width:30%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var spec in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@spec.Name</td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-outline-primary me-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a href="#" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2" class="text-muted">No specializations found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .btn-gradient {
        background: linear-gradient(45deg, #007bff, #00c6ff);
        border: none;
        color: white !important;
        transition: 0.3s ease-in-out;
    }

    .btn-gradient:hover {
        background: linear-gradient(45deg, #0056b3, #0086b3);
        transform: translateY(-2px);
    }
</style>
