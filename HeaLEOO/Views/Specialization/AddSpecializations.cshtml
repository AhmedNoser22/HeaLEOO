@model HeaLEOO.ViewModels.SpecializationsVM

@{
    ViewData["Title"] = "Add Specialization";
    Layout = "_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">Add Specialization</h2>

    <form asp-action="AddSpecializations" method="post" class="card p-4 shadow-sm">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter specialization name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">
            <i class="bi bi-check-circle"></i> Save
        </button>
        <a asp-controller="Specialization" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
