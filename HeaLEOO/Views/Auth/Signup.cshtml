@model dynamic
@{
    ViewData["Title"] = "Sign Up";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Online Tournament - @ViewData["Title"]</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
        }

        .register-page {
            display: flex;
            height: 100vh;
            width: 100%;
        }

        .welcome-section {
            flex: 1;
            background: linear-gradient(135deg, #2c7da0, #57c7e3);
            color: #fff;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
            padding: 4rem;
            position: relative;
            overflow: hidden;
        }

        .curve {
            position: absolute;
            top: 0;
            right: -1px;
            height: 100%;
            width: 150px;
            overflow: hidden;
        }

            .curve svg {
                height: 100%;
                width: 100%;
            }

        .rocket {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            display: grid;
            place-items: center;
            background: rgba(255, 255, 255, 0.1);
            font-size: 32px;
            border: 2px solid rgba(255, 255, 255, 0.2);
            margin-bottom: 1rem;
        }

        /* Form Section */
        .form-section {
            flex: 2;
            background: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 4rem;
        }

        .form-box {
            width: 100%;
            max-width: 700px;
        }

            .form-box h2 {
                color: #2c7da0;
                margin-bottom: 1rem;
                font-weight: bold;
            }

        .form-control, .form-select {
            border: 2px solid #e0e7ff;
            border-radius: 10px;
            padding: 12px;
            transition: border-color 0.2s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: #2c7da0;
                box-shadow: 0 0 0 3px rgba(44, 125, 160, 0.2);
            }

        .btn-signup {
            background: linear-gradient(135deg, #2c7da0, #57c7e3);
            border: none;
            border-radius: 30px;
            padding: 14px;
            font-weight: bold;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            width: 100%;
            color: #fff;
            margin-top: 25px;
            box-shadow: 0 4px 10px rgba(44, 125, 160, 0.3);
        }

            .btn-signup:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 14px rgba(44, 125, 160, 0.4);
            }

        .login-link {
            font-size: 0.9em;
            color: #2c7da0;
            text-decoration: none;
        }

            .login-link:hover {
                text-decoration: underline;
                color: #1a5d7a;
            }


        @@media (max-width: 768px) {
            .register-page {
                flex-direction: column;
            }

            .curve {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="register-page">
    
        <div class="welcome-section">
            <div class="rocket">🚀</div>
            <h2 class="fw-bold">Welcome</h2>
            <p class="mb-3">You are 30 seconds away from signing up for your own tournament!</p>
            <p>
                Already have an account?
                <a href="/Login" class="text-white fw-bold text-decoration-underline">Login</a>
            </p>

   
            <div class="curve">
                <svg viewBox="0 0 200 800" preserveAspectRatio="none">
                    <path d="M0,0 C150,400 50,400 200,800 L200,0 Z" fill="#fff"></path>
                </svg>
            </div>
        </div>

   
        <div class="form-section">
            <div class="form-box">
                <h2>Sign Up</h2>
                <form method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <input type="text" class="form-control" placeholder="First Name *" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <input type="text" class="form-control" placeholder="Last Name *" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <input type="text" class="form-control" placeholder="User Name *" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <input type="email" class="form-control" placeholder="Your Email *" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <input type="tel" class="form-control" placeholder="Your Phone *" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <select class="form-select" required>
                                <option value="">Select Country</option>
                                <option>Egypt</option>
                                <option>Saudi Arabia</option>
                                <option>UAE</option>
                                <option>Kuwait</option>
                                <option>Other</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <input type="password" class="form-control" placeholder="Password *" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <input type="password" class="form-control" placeholder="Confirm Password *" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <input type="number" class="form-control" placeholder="Age (20 - 50)" min="20" max="50" required />
                        </div>
                        <div class="col-md-6 mb-3 d-flex align-items-center">
                            <label class="me-3">Gender:</label>
                            <div class="form-check me-3">
                                <input class="form-check-input" type="radio" name="gender" id="male" value="Male" required>
                                <label class="form-check-label" for="male">Male</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="female" value="Female">
                                <label class="form-check-label" for="female">Female</label>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn-signup">Sign Up</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
