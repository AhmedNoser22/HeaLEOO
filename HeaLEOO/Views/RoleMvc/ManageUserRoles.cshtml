@model List<RoleViewModel>
@{
    ViewData["Title"] = "Manage User Roles";
}

<div class="container mt-5">
    <h2>Manage Roles for: <span class="text-primary">@ViewBag.UserName</span></h2>

    <form asp-action="ManageUserRoles" method="post">
        <input type="hidden" name="userName" value="@ViewBag.UserName" />

        <div class="mb-3">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox"
                           asp-for="@Model[i].IsSelected" />
                    <label class="form-check-label">@Model[i].RoleName</label>
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Update Roles</button>
        <a asp-action="Users" class="btn btn-secondary ms-2">Back</a>
    </form>
</div>
