@model List<RoleViewModel>

@{
    ViewData["Title"] = "Manage User Roles";
}

<div class="role-details-container">
    <div class="role-details-card">
        <h2 class="role-details-title">
            Manage Roles for: <span class="role-username">@ViewBag.UserName</span>
        </h2>

        <form asp-action="ManageUserRoles" method="post">
            <input type="hidden" name="userName" value="@ViewBag.UserName" />

            <div class="role-details-section">
                @for (int i = 0; i < Model.Count; i++)
                {
                    var checkboxId = $"role_{i}";
                    <div class="role-checkbox">
                        <input id="@checkboxId" class="role-checkbox-input" type="checkbox"
                               asp-for="@Model[i].IsSelected" />
                        <label for="@checkboxId" class="role-checkbox-label">@Model[i].RoleName</label>
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                    </div>
                }
            </div>

            <div class="role-details-actions">
                <button type="submit" class="role-btn-update">Update Roles</button>
                <a asp-action="Users" class="role-btn-back">← Back to List</a>
            </div>
        </form>
    </div>
</div>

