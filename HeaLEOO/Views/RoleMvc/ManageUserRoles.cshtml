@model UserRolesVM
@{
    ViewData["Title"] = "Manage User Roles";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2 class="mb-4">Manage Roles for User: <span class="text-primary">@Model.UserName</span></h2>

    <form asp-action="UpdateUserRoles" method="post">
        <input type="hidden" name="UserName" value="@Model.UserName" />

        <div class="mb-3">
            <label class="form-label">Roles</label>
            <div class="form-check">
                @foreach (var role in Model.AllRoles)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                               name="SelectedRoles" value="@role"
                               @(Model.UserRoles.Contains(role) ? "checked" : "") />
                        <label class="form-check-label">@role</label>
                    </div>
                }
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Update Roles</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back to Roles</a>
    </form>
</div>
