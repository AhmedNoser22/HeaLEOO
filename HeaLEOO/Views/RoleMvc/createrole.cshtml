@{
    ViewData["Title"] = "Create Role";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Create New Role</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }

    <form asp-action="CreateRole" method="post" class="w-50 mx-auto">
        <div class="form-group mb-3">
            <label for="roleName" class="form-label">Role Name</label>
            <input type="text" id="roleName" name="roleName" class="form-control" placeholder="Enter role name" required />
        </div>

        <div class="d-flex justify-content-center gap-2">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Users" class="btn btn-secondary">Back</a>
        </div>
    </form>
</div>
