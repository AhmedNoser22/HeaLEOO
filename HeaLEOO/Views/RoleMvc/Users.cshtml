@model IEnumerable<UserManagerVM>

@{
    ViewData["Title"] = "Roles";
}

<div class="roles-container">
    <h2 class="roles-title">Roles</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }
    <div class="create-role-box">
        <form asp-action="CreateRole" method="post" class="form-inline">
            <div class="form-group">
                <input type="text" name="roleName" class="form-control" placeholder="Enter new role..." />
            </div>
            <button type="submit" class="btn btn-success ml-2">Create Role</button>
        </form>
    </div>
    <hr />

    <div class="role-table-wrapper">
        <table class="role-table">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th style="width: 200px;">Manage Roles</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            <div class="role-actions">
                                <a asp-action="ManageUserRoles" asp-route-userName="@user.UserName"
                                   class="role-btn-manage">Manage Roles</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
