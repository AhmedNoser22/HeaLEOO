@model IEnumerable<ClinicVM>

<h2>Clinics</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Photo</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var clinic in Model)
    {
        <tr>
            <td>@clinic.Name</td>
            <td>@clinic.Address</td>
            <td>@clinic.PhoneNumber</td>
            <td>
                @if (!string.IsNullOrEmpty(clinic.PhotoUrl))
                {
                    <img src="@clinic.PhotoUrl" width="50" />
                }
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@clinic.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@clinic.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Clinic</a>
