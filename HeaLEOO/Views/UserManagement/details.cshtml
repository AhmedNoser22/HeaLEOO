@using HeaLEOO.DTOs
@model AppUserDto

@{
    ViewData["Title"] = "User Details";
}

<div class="user-details-container">
    <div class="user-details-card">
        <h2 class="user-details-name">@Model.UserName</h2>

        <div class="user-details-section">
            <h3>Email</h3>
            <p>@Model.Email</p>
        </div>

        <div class="user-details-actions">
            <a asp-action="Index" class="user-btn-back">← Back to List</a>
        </div>
    </div>
</div>
