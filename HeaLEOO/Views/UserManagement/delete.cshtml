@model HeaLEOO.ViewModels.AppUserDto

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-danger text-white text-center">
            <h3>⚠️ Confirm Delete</h3>
        </div>
        <div class="card-body text-center p-4">
            <h4 class="mb-3">Are you sure you want to delete this user?</h4>
            <p class="fw-bold">@Model.UserName</p>
            <p class="text-muted">📧 @Model.Email</p>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" name="id" value="@Model.UserName" />
                <button type="submit" class="btn btn-danger px-4">🗑 Yes, Delete</button>
                <a asp-action="Index" class="btn btn-secondary px-4">❌ Cancel</a>
            </form>
        </div>
    </div>
</div>
