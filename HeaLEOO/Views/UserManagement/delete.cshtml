@using HeaLEOO.DTOs
@model AppUserDto

@{
    ViewData["Title"] = "Delete User";
}

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white text-center rounded-top-4">
            <h3>⚠️ Delete User</h3>
        </div>
        <div class="card-body text-center">
            <p class="fs-5">Are you sure you want to delete this user?</p>
            <p><strong>@Model.UserName</strong> - @Model.Email</p>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger rounded-pill px-4">Yes, Delete</button>
                <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">Cancel</a>
            </form>
        </div>
    </div>
</div>
