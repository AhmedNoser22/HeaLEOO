@using HeaLEOO.DTOs
@model List<AppUserDto>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="users-container">
    <h2 class="users-title">User Management</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }

    <div class="user-table-wrapper">
        <table class="user-table">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th style="width: 200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            <div class="user-actions">
                                <a asp-action="Details" asp-route-id="@user.Id" class="user-btn-details">Details</a>
                                <form asp-action="Delete" asp-route-id="@user.Id" method="post" style="display:inline;">
                                    <button type="submit" class="user-btn-delete"
                                            onclick="return confirm('Are you sure you want to delete this user?');">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
