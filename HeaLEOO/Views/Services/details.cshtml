@model HeaLEOO.ViewModels.ServiceVM

@{
    ViewData["Title"] = "Service Details";
}

<div class="service-details-container">
    <div class="service-details-card">
        <h2 class="service-details-name">@Model.Name</h2>

        <div class="service-details-section">
            <h3>Price</h3>
            <p>@Model.Price</p>
        </div>

        <div class="service-details-section">
            <h3>Clinic</h3>
            <p>
                @Model.Clinics?.FirstOrDefault(c => c.Value == Model.clinicId.ToString())?.Text
            </p>
        </div>

        <div class="service-details-actions">
            <a asp-action="Index" class="btn-back">Back</a>
        </div>
    </div>
</div>