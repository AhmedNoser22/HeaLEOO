@model IEnumerable<HeaLEOO.ViewModels.ServiceVM>

@{
    ViewData["Title"] = "Services";
}

<div class="services-container">
    <h2 class="services-title">Services</h2>

    <div class="services-footer">
        <a asp-action="Create" class="btn-create">+ Add Service</a>
    </div>

    <div class="services-grid">
        @foreach (var service in Model)
        {
            <div class="service-card">
                <div class="service-info">
                    <h3 class="service-name">@service.Name</h3>
                    <p class="service-address">@service.Price</p>
                    <p class="service-phone">@service.ClinicName</p>
                </div>

                <div class="service-actions">
                    <a asp-action="Details" asp-route-id="@service.Id" class="btn-details">Details</a>
                    <a asp-action="Edit" asp-route-id="@service.Id" class="btn-edit">Edit</a>

                    <form asp-action="Delete" asp-route-id="@service.Id" method="post" style="display:inline"
                          onsubmit="return confirmServiceDelete(event, this);">
                        <button type="submit" class="btn-delete">Delete</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/service-Index.js"></script>
}
