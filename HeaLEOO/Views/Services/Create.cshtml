@model IEnumerable<HeaLEOO.ViewModels.ServiceVM>

@{
    ViewData["Title"] = "Services List";
}

<h2>Services</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Service</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th style="width:200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Price</td>
                <td>
                    <a asp-action="Details" asp-route-id="@service.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@service.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
