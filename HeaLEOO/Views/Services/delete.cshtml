@model HeaLEOO.ViewModels.ServiceVM

@{
    ViewData["Title"] = "Delete Service";
}

<h2>Delete Service</h2>

<h4>Are you sure you want to delete this service?</h4>

<div>
    <strong>Name:</strong> @Model.Name <br />
    <strong>Price:</strong> @Model.Price <br />
    <strong>Clinic:</strong>
    @Model.Clinics?.FirstOrDefault(c => c.Value == Model.clinicId.ToString())?.Text
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="clinicId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
