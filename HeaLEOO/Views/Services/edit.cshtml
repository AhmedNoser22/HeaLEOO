@model HeaLEOO.ViewModels.ServiceVM

@{
    ViewData["Title"] = "Edit Service";
}

<div class="service-create-container">
    <div class="service-create-card">
        <h2 class="service-create-title">Edit Service</h2>

        <form asp-action="Edit" method="post" class="service-create-form">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="clinicId"></label>
                <select asp-for="clinicId" asp-items="Model.Clinics">
                    <option value="">-- اختر عيادة --</option>
                </select>
                <span asp-validation-for="clinicId" class="text-danger"></span>
            </div>

            <div class="service-create-actions">
                <button type="submit" class="btn-create">Update</button>
                <a asp-action="Index" class="btn-cancel">Back</a>
            </div>
        </form>
    </div>
</div>