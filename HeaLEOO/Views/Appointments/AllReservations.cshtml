@model IEnumerable<HeaLEOO.ViewModels.AppointmentsVM>

<h2>All Reservations (with Users)</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Date</th>
            <th>Status</th>
            <th>Doctor</th>
            <th>User</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var app in Model)
        {
            <tr>
                <td>@app.App_Date.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@app.status</td>
                <td>@app.DoctorName</td>
                <td>@app.AppUser?.UserName</td>
            </tr>
        }
    </tbody>
</table>
