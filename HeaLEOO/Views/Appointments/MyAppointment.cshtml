@model AppointmentsVM

@{
    ViewData["Title"] = "My Appointment";
}

<div class="my-appointment-container">
    <div class="my-appointment-card">
        <h2 class="my-appointment-title">📅 My Appointment</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert-success">@TempData["Success"]</div>
        }

        <div class="appointment-info">
            <div class="info-item">
                <span class="info-label">Date:</span>
                <span class="info-value">@Model.App_Date.ToString("dd/MM/yyyy HH:mm")</span>
            </div>

            <div class="info-item">
                <span class="info-label">Doctor:</span>
                <span class="info-value">@Model.DoctorName</span>
            </div>

            <div class="info-item">
                <span class="info-label">Clinic:</span>
                <span class="info-value">@Model.ClinicName</span>
            </div>

            <div class="info-item">
                <span class="info-label">Status:</span>
                <span class="info-value status @(Model.isActive == true ? "active" : "inactive")">
                    @(Model.isActive == true ? "Active" : "Inactive")
                </span>
            </div>
        </div>

        <div class="appointment-actions">
            <a asp-action="Index" class="btn-back">← Back to All Appointments</a>
        </div>
    </div>
</div>
<style>
    .my-appointment-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        background: linear-gradient(135deg, #f3f4f6, #e0e7ff);
        padding: 20px;
    }

    .my-appointment-card {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        padding: 30px 40px;
        max-width: 500px;
        width: 100%;
        text-align: center;
        transition: transform 0.2s ease-in-out;
    }

        .my-appointment-card:hover {
            transform: translateY(-5px);
        }

    .my-appointment-title {
        font-size: 28px;
        margin-bottom: 25px;
        color: #4f46e5;
        font-weight: bold;
    }

    .alert-success {
        background: #d1fae5;
        color: #065f46;
        padding: 12px;
        border-radius: 10px;
        margin-bottom: 20px;
        font-weight: 500;
    }

    .appointment-info {
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-bottom: 25px;
    }

    .info-item {
        display: flex;
        justify-content: space-between;
        font-size: 18px;
        padding: 12px 15px;
        border-bottom: 1px solid #e5e7eb;
    }

    .info-label {
        font-weight: bold;
        color: #374151;
    }

    .info-value {
        color: #1f2937;
    }

    .status.active {
        color: #16a34a;
        font-weight: bold;
    }

    .status.inactive {
        color: #dc2626;
        font-weight: bold;
    }

    .appointment-actions {
        margin-top: 20px;
    }

    .btn-back {
        display: inline-block;
        padding: 10px 18px;
        background: #4f46e5;
        color: #fff;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 500;
        transition: background 0.3s ease-in-out;
    }

        .btn-back:hover {
            background: #4338ca;
        }
</style>
