@model AppointmentsVM

@{
    ViewData["Title"] = "My Appointment";
}

<div class="appointments-container">
    <div class="appointments-header">
        <h2 class="appointments-page-title">My Appointment</h2>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="appointments-alert-success">@TempData["Success"]</div>
    }

    <div class="appointments-card">
        <div class="appointments-info">
            <div class="appointments-info-item">
                <span class="appointments-label">Date:</span>
                <span class="appointments-value">@Model.App_Date.ToString("dd/MM/yyyy HH:mm")</span>
            </div>

            <div class="appointments-info-item">
                <span class="appointments-label">Doctor:</span>
                <span class="appointments-value">@Model.DoctorName</span>
            </div>

            <div class="appointments-info-item">
                <span class="appointments-label">Clinic:</span>
                <span class="appointments-value">@Model.ClinicName</span>
            </div>

            <div class="appointments-info-item">
                <span class="appointments-label">Status:</span>
                <span class="appointments-value @(Model.isActive == true ? "status-active" : "status-inactive")">
                    @(Model.isActive == true ? "Active" : "Inactive")
                </span>
            </div>
        </div>
    </div>
</div>