@model AppointmentsVM
@{
    ViewData["Title"] = "Create Appointment";
}

<div class="appointment-create-container">
    <div class="appointment-create-card">
        <h2 class="appointment-create-title">Create Appointment</h2>

        <form asp-action="Create" method="post" class="appointment-create-form">
            <div class="form-group">
                <label asp-for="App_Date">Appointment Date</label>
                <input asp-for="App_Date" type="datetime-local" class="form-control" />
                <span asp-validation-for="App_Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DoctorId">Doctor</label>
                <select asp-for="DoctorId" asp-items="Model.SelectDoctors" class="form-control-select"></select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input type="checkbox" id="isActive" name="isActive" value="true" class="form-check-input"
                       @(Model?.isActive == true ? "checked" : "") />
                <label for="isActive" class="form-check-label">Is Active?</label>
            </div>

            <div class="form-group">
                <label asp-for="ClinicId">Clinic</label>
                <select asp-for="ClinicId" asp-items="Model!.SelectClinics" class="form-control-select"></select>
                <span asp-validation-for="ClinicId" class="text-danger"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="appointments-btn-save">Save</button>
                <a asp-action="Index" class="appointments-btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>
